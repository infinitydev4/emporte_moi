
<div class="container">
<div class="row" style="justify-content: center;">
  <div class="col-xs-12 col-sm-4 col-sm-offset-4">
    
    <div class="form-login">
    <h5 class="heading-design-h5">S'inscrire en tant que Restaurant</h5>
    <%= form_for("restaurant", url: registration_path("restaurant")) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.label :nom %><br />
        <%= f.text_field :nom, autofocus: true, placeholder: "nom", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :adresse %><br />
        <%= f.text_field :adresse, placeholder: "adresse", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :téléphone %><br />
        <%= f.text_field :téléphone, placeholder: "téléphone", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, placeholder: "email", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, placeholder: "******", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, placeholder: "******", class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit "Inscription", class:"btn btn-lg btn-secondary" %>
      </div>

      <%= link_to "Me connecter", new_restaurant_session_path, class: "btn btn-primary" %>
      <%= link_to "Je suis un particulier", new_user_registration_path, class: "btn btn-primary" %>
    <% end %>
    </div>
  </div>
  </div>
</div>

